{
  "ConnectionStrings": {
    "MsSqlDb": "Data Source=mssql;Initial Catalog=cars;User ID=user;Password=simplePWD123!",
    "SqliteDb": "Data Source=books.db"
  },

  "PingWebsite": {
    "Url": "https://google.com",
    "TimeIntervalInMinutes": 60
  },

  "ApiKey": {
    "SecretKey": "ABC-xyz"
  },

  "Jwt": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "LimitKursBackend",
    "Audience": "LimitKursUsers",
    "ExpirationHours": 24
  },

  "FeatureManagement": {
    "ApiKey": true,
    "DockerCompose": false,
    "Santa": {
      "EnabledFor": [
        {
          "Name": "Microsoft.TimeWindow",
          "Parameters": {
            "Start": "2020-12-06 00:00:00",
            "End": "2020-12-06 23:59:59"
          }
        }
      ]
    },
    "ConnectionInfo": {
      "EnabledFor": [
        {
          "Name": "Microsoft.Percentage",
          "Parameters": {
            "Value": 50
          }
        }
      ]
    }
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/HappyCode.NetCoreBoilerplate.Api.log"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "HappyCode.NetCoreBoilerplate.Api"
    }
  }
}
